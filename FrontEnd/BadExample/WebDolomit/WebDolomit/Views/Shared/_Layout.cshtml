<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" /> @*для IE*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Статистическая отчётность" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="content-wrapper">
        <header>
            <div class="content-wrapper ">
                <div class="float-left float-left-head">
                    <h1 class="site-title">
                        <a href="http://www.vtb.rw:86/nstat/Report/Reports">Статистическая отчётность</a>
                    </h1>
                </div>
                <div class="float-right float-right-head">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="clear-fix">
                @RenderBody()
            </section>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
